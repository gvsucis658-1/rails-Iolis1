<div classs = "w-full">
<% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg
            inline-block" id="notice">
        <%= notice %>
    </p>
<% end %>

<h1 class="font-bold text-xl mb-6 pb-2 border-b-2">
    Armors at your Disposal
</h1>

<ul>
    <% @armors.each do |armor| %>
        <li class='flex mb-6'>
            <% case armor.armor_type %>
            <% when "Plate" %>
              <%= image_tag('plate.gif', class: 'object-contain w-40 h-48 shadow mr-6') %>
            <% when "Leather" %>
              <%= image_tag('leather.gif', class: 'object-contain w-40 h-48 shadow mr-6') %>
            <% when "Chainmail" %>
              <%= image_tag('chainmail.gif', class: 'object-contain w-40 h-48 shadow mr-6') %>
            <% when "Cloth" %>
              <%= image_tag('cloth.gif', class: 'object-contain w-40 h-48 shadow mr-6') %>
            <% end %>
            <div>
                <h2 class="font-bold text-lg mb-3"><%=armor.name%></h2>
                <p>
                    <%= sanitize(armor.description) %>
                </p>
                <div class="mt-3">
                   <p>Armor Weight: <%= armor.weight %> stones </p>
                   <%= button_to 'Equip Armor', 
                      line_items_path(armor_id: armor),
                      form_class: 'inline', 
                      class: 'ml-4 rounded-lg py-1 px-2 
                            text-white bg-green-600' %>
                </div>
            </div>
        </li>
    <% end %>
</ul>
</div>