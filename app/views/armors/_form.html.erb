<%= form_with(model: armor) do |form| %>
  <% if armor.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(armor.errors.count, "error") %> prohibited this armor from being saved:</h2>

      <ul>
        <% armor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :armor_type, style: "display: block"%>
    <%= form.select :armor_type, ['Plate', 'Leather', 'Chainmail', 'Cloth'], {}, {class: "select-css"} %>
  </div>

  <div>
    <%= form.label :armor_class, style: "display: block" %>
    <%= form.number_field :armor_class, min: 1, max: 20, step: 1, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :weight, style: "display: block" %>
    <%= form.number_field :weight %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :intelligence, style: "display: block" %>
    <%= form.number_field :intelligence, min: 0, max: 20, step: 1, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :wisdom, style: "display: block" %>
    <%= form.number_field :wisdom, min: 0, max: 20, step: 1, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :strength, style: "display: block" %>
    <%= form.number_field :strength, min: 0, max: 20, step: 1, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :dexterity, style: "display: block" %>
    <%= form.number_field :dexterity, min: 0, max: 20, step: 1, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :constitution, style: "display: block" %>
    <%= form.number_field :constitution, min: 0, max: 20, step: 1, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :charisma, style: "display: block" %>
    <%= form.number_field :charisma, min: 0, max: 20, step: 1, class: 'form-control' %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
