<div class="max-auto md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium
              rounded-lg inline-block" id="notice">
              <% notice %>
    </p>
  <% end %>
  <%= form_tag do %>
    <h2 class="font-bold text-3xl">Please Log In</h2>
    <div class="my-5">
      <%= label_tag :name, 'Name:' %>
      <%= text_field_tag :name, params[:name], class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
      <%= label_tag :password, params[:password], class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="actions">
      <%= submit_tag "login", class: "rounded-lg py-3 px-5 bg-green-600 text-block inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
</div>
